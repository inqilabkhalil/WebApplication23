@model IEnumerable<WorkerVM>
<a asp-action="Create" class="btn btn-success">Create new Item</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Image</th>
            <th scope="col">FullName</th>
            <th scope="col">CategoryName</th>
            <th scope="col">Description</th>
            <th scope="col">Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.FullName</td>
                <td><img src ="~/images/@item.Image" /></td>
                <td>@item.CategoryName</td>
                   <td>@item.Description</td>

                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info">Update</a>
                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning">Detail</a>
                    <form method="post">

                        <button asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</button>
                    </form>

                </td>
            </tr>
        }

    </tbody>
</table>